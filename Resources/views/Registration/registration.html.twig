{% extends '@UniteCMSCore/layout.html.twig' %}
{% block title %}{{ site_name }}{% endblock title %}
{% block navigation %}{% endblock %}
{% block content %}
<article class="uk-card uk-card-default uk-card-body centered-content-card uk-width-xlarge">
    <header class="uk-card-header">
        <h2>{% trans %}registration.registration.headline{% endtrans %}</h2>
    </header>
    <div class="uk-flex-1">
        {{ include('@UniteCMSRegistration/Form/_registration-form.html.twig', { form: form }) }}
    </div>
</article>
<style type="text/css" rel="stylesheet">
    body {
        background-image: radial-gradient(50% 100%, #073B4C 0%, #02212B 100%);
    }
</style>
{% endblock %}
